@inherits UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<ContentModels.ItemCards>>


@{
    const int TITLE_AREA = 0;
    const int CONTENT_AREA = 1;

}

<!-- Cards Section-->
<section class="page-section portfolio" id="cards-area">
    <div class="container">
    @await Html.GetBlockGridItemAreaHtmlAsync(Model.Areas.ElementAt(TITLE_AREA))
        <!-- Cards Grid Items-->
        <div class="row justify-content-center gap-4">
        @await Html.GetBlockGridItemAreaHtmlAsync(Model.Areas.ElementAt(CONTENT_AREA))
        </div>
    </div>
</section>